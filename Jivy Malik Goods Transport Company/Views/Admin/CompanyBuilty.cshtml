@model Jivy_Malik_Goods_Transport_Company.ViewModel.Admin.BuiltyData.BuiltyViewModel
@{
    ViewBag.Title = "CompanyBuilty";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item text-white">
        <a href="/Admin/Index" class="text-info">Dashboard</a>
    </li>
    <li class="breadcrumb-item active text-info">Builty Home</li>
</ol>
<div class="container-fluid">

    <div class="card card-body mx-auto ">
        <div class="card-header text-center bg-info text-white font-weight-bold">New Builty</div>
        <div class="card-body ">
            @using (Html.BeginForm("CompanyBuilty", "Admin", FormMethod.Post, new { }))
            {

                <p>
                    @TempData["message"]
                </p>

                <div class="form-group">
                    <br />
                    <h5 class="text-info font-weight-bold">Builty Information</h5>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">

                            <label for="Builty_BuiltyTruckNumber">Truck No</label>
                            <br />
                            @Html.TextBoxFor(m => m.Builty.BuiltyTruckNumber, new { @Class = "form-control" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyTruckNumber)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="Builty_BuiltyDriver">Driver Name</label>
                            <br />
                            @Html.TextBoxFor(m => m.Builty.BuiltyDriver, new { @Class = "form-control" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyDriver)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="Builty_BuiltyDriverNumber">Driver Number</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyDriverNumber, "", new { @Class = "form-control", @Placeholder = "i.e 03064446673", @minlength = "11", @maxlength = "11" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyDriverNumber)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="Builty_BuiltyDriverId">Driver CNIC </label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyDriverId, "", new { @Class = "form-control", @Placeholder = "", @minlength = "13", @maxlength = "13" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyDriverId)</p>
                        </div>
                    </div>
                </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="Builty_BuiltyWeight">Weight</label>
                @Html.TextBoxFor(m => m.Builty.BuiltyWeight, "", new { @Class = "form-control", @Placeholder = "i.e 20 Ton", @minlength = "1", @maxlength = "6" })
                <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyWeight)</p>
            </div>
            <div class="col-md-3">
                <label for="Builty_BuiltySeller">Seller</label>
                @Html.TextBoxFor(m => m.Builty.BuiltySeller, "", new { @Class = "form-control", @Placeholder = "Peter Parker", @minlength = "4", @maxlength = "15" })
                <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltySeller)</p>
            </div>
            <div class="col-md-3">
                <label for="Builty_BuiltyBuyer">Buyer</label>
                @Html.TextBoxFor(m => m.Builty.BuiltyBuyer, "", new { @Class = "form-control", @Placeholder = "John Smith", @minlength = "4", @maxlength = "15" })
                <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyBuyer)</p>
            </div>
            <div class="col-md-3">
                <label for="Builty_BuiltyVehicleSize">Truck Size</label>
                @Html.TextBoxFor(m => m.Builty.BuiltyVehicleSize, new { @Class = "form-control"})
                <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyVehicleSize)</p>
            </div>


        </div>
    </div>
                <br />
                <div class="form-group">
                    <h5 class="text-info font-weight-bold">LOCATION</h5>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">

                            <label for="Builty_BuiltySource">start location</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltySource, "", new { @Class = "form-control", @minlength = "4", @maxlength = "25" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltySource)</p>
                        </div>
                        <div class="col-md-1">

                        </div>
                        <div class="col-md-3">
                            <h6 class="font-weight-bold">To</h6>

                        </div>
                        <div class="col-md-4">
                            <label for="Builty_BuiltyDestination">End Location</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyDestination, "", new { @Class = "form-control", @minlength = "4", @maxlength = "25" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyDestination)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <br />
                    <h5 class="text-info font-weight-bold">Builty Charge & Detail</h5>
                    @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">*@
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="Builty_BuiltyFare">Builty Fare</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyFare, "", new { @Class = "form-control", @Placeholder = "i.e 25000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyFare)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="Builty_BuiltyAdvance">Advance Payment</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyAdvance, "", new { @Class = "form-control", @Placeholder = "i.e 25000", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyAdvance)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="Builty_BuiltyGoodsDetail">Goods Detail</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyGoodsDetail, "", new { @Class = "form-control", @Placeholder = "ie- Mango", @minlength = "4", @maxlength = "15" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyGoodsDetail)</p>
                        </div>
                        <div class="col-md-3">
                            <label for="Builty_BuiltyQuantity">Goods Quantaty</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyQuantity, "", new { @Class = "form-control", @Placeholder = "ie- 30 Box", @minlength = "4", @maxlength = "15" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyQuantity)</p>
                        </div>

                    </div>
                    
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="Builty_BuiltyRate">Builty Rate</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyRate, "", new { @Class = "form-control", @Placeholder = "i.e 24", @minlength = "1", @maxlength = "6" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyRate)</p>
                        </div>
                        @if(Model.Builty.BuiltyNumber==0)
                        {
                        <div class="col-md-3">
                            <label for="Builty_BuiltyDate">Date</label>
                            @Html.TextBoxFor(m => m.Builty.BuiltyDate, new { @Class = "form-control", type = "date" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyDate)</p>
                        </div>
                        }
                        else
                        {
                        <div class="col-md-3">
                            <label for="Builty_BuiltyDate">Date</label>
                            @Html.EditorFor(m => m.Builty.BuiltyDate, new { htmlAttributes = new { @Class = "form-control"} })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Builty.BuiltyDate)</p>
                        </div>
                        }

                    </div>


                </div>

                <br />
                <div class="form-group">
                    <div class="form-row">

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Builty.BuiltyNumber)
                        @Html.HiddenFor(m => m.Builty.BuiltyType, new {@Value="Company" })



                        <div class="col-md-3">
                            <input type="submit" value="Submit" class="btn btn-info text-white font-weight-bold" />
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>




            }

        </div>
    </div>
</div>
